doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
        title Noom
    body 
        header 
            h1 Noom
        main 
            div#myFace  
                video(autoplay,playsinline,width="400",height="400")
                button#mute Mute
                button#camera Turn Off
                select#select-cam 
            div#nickDiv
                h2
                form#nickForm
                    input(type="text" placeholder="write nickname" required)
                    button Save
            div#roomDiv
                h2
                h3
                form#roomForm
                    input(type="text" placeholder="write room name" required)
                    button Create
                h4 Current rooms:
                ul
            div#msgDiv
                form#msgForm
                    input(type="text" placeholder="write your msg" required)
                    button Send
                ul
        script(src="/socket.io/socket.io.js") 
        script(src="/public/js/app.js")